{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "target": "esnext",
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  },
  "include": "src/**/*",
  "exclude": ["node_modules", "**/*.spec.ts"]
}
